{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

#!/bin/bash
{{ if eq .chezmoi.os "darwin" -}}
if [ -x "$(command -v nvim)" ]; then
	nvim +'PlugInstall --sync' +qa --headless
fi
{{ else if eq .osid "linux-debian" -}}
if [ -x "$(command -v nvim)" ]; then
	nvim +'PlugInstall --sync' +qa --headless
fi
{{ end -}}
